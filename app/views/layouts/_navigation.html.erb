<% # If statement for rendering different nav bar for sign in/ sign up page without logout button %>
    <% if true %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/posts">AceBook</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav" style="justify-content:flex-end">
          <ul class="navbar-nav">
            <li class="nav-item">
             <% if session[:user_id] %>
              <li class="nav-item">
                <% @current_user = User.find(session[:user_id])%>
               <%= link_to "Profile", user_path(@current_user.id), class: "nav-link" %>
              </li>
              <a class="nav-link" aria-current="page" href="/posts">Home</a>
              <% else  %>
              <a class="nav-link" aria-current="page" href="/">Home</a>
              <% end %>
            </li>
            <li class="nav-item">
            <% if session[:user_id] %>
            <%= link_to "Logout", logout_path, method: "delete", class: "nav-link" %>
            <% end %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <% else %>

    <% end %>