<% # If statement for rendering different nav bar for sign in/ sign up page without logout button %>
    <% if true %>
    <nav class="navbar navbar-expand-lg navbar-light bg-white" id="derailed-nav">
      <div class="container-fluid">
        <a class="navbar-brand" href="/posts">AceBook</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav" style="justify-content:flex-end">
          <% if session[:user_id] %>
            <ul class="navbar-nav">
              <li class="nav-item">
                  <a class="nav-link" aria-current="page" href="/posts/new">New post</a>
              </li>
            
              <li class="nav-item">
                  <a class="nav-link" href="#">Profile</a>
              </li>

              <li class="nav-item">
                  <%= link_to "Logout", logout_path, method: "delete", class: "nav-link" %>
              </li>
            </ul>  
          <% end %>
        </div>
      </div>
    </nav>
    <% else %>

    <% end %>