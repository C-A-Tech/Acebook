<main>
<%= link_to new_post_path do %>
  New post
<% end %>

<% @posts.each do |post| %>
  <p>
    <% user = User.find(post.user_id) %>
    <%= image_tag user.image, style: "width: 20px;" %>
    <%= user.name %>
  </p>
  <p><%= post.message %></p> <br>
  <div><%= image_tag post.post_image, style: "width: 100px; height: 100px;" if post.post_image.attached? %></div>
  <span><%= post.created_at.strftime("Posted at %H:%M on %a %b %Y") %></span> <br />
   <%= link_to new_comment_path do %>
    New comment
  <% end %>
  <% post.comments.each do |comment| %>
  <p><%= comment.body %></p>

<% end %>
  <div>
    <%= button_to "Like", like_path(post.id), method: "put" %>
    <%= post.likes %> <%= post.likes == 1 ? "Like" : "Likes" %>
  </div>
  <br /> <br />
<% end %>
</main>