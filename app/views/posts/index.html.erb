<%= link_to new_post_path do %>
  New post
<% end %>
<% @posts.each do |post| %>


  <p><%= post.message %></p>
  <%= link_to new_comment_path do %>
    New comment
  <% end %>
  <% @comments.each do |comment| %>
  <p><%= comment.body %></p>
<% end %>


  <%= button_to "Like", like_path(post.id), method: "put" %>
  <%= post.likes %> <%= post.likes == 1 ? "Like" : "Likes" %>
<% end %>